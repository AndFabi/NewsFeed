<div class="container">
  <h1><%= @news.title %></h1>
  <div class="row">
    <div class="news-index">
      <% @news.reviews.each do |reviews| %>
      <div class="col-xs-18 col-sm-6 col-md-3">
        <div class="thumbnail">


          <div class="caption">
            <p><%= reviews.content %></p>
          </div>
          <%= link_to 'Home', root_path %>

        </div>
      </div>
      <%end%>
    </div>
  </div>

</div>
